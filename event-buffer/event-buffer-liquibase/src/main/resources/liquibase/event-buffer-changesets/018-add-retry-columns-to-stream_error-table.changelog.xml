<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="stream_buffer-018" author="TechPod"
               logicalFilePath="liquibase/event-buffer-changesets/018-add-retry-columns-to-stream_error-table.changelog.xml">


        <addColumn tableName="stream_error">
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="retry_count" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="next_retry_time" type="TIMESTAMP WITH TIME ZONE" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
        </addColumn>

    </changeSet>

</databaseChangeLog>
