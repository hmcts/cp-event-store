<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="stream_buffer-020" author="TechPod"
               logicalFilePath="liquibase/event-buffer-changesets/020-replace-updated_at-with-discovered_at-on-stream_status.changelog.xml">

        <dropColumn tableName="stream_status" columnName="updated_at"/>

        <addColumn tableName="stream_status">
            <column name="discovered_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </addColumn>

    </changeSet>

</databaseChangeLog>
