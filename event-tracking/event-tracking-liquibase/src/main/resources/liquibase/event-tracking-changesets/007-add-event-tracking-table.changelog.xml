<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet
            id="subscription-repository-007"
            author="TechPod"
            logicalFilePath="007-add-event-tracking-table.changelog.xml">

        <createTable tableName="event_subscription_status">
            <column name="source" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_event_subscription_status"/>
            </column>
            <column name="component" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_event_subscription_status"/>
            </column>
            <column name="latest_event_id" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

